<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10.0dip" />

            <gradient
                android:angle="270.0"
                android:endColor="@color/gray"
                android:startColor="@color/gray" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/darkorange"
                    android:endColor="@color/darkorange"
                    android:startColor="@color/darkorange" />
            </shape>
        </clip>
    </item>

</layer-list><!--
//android:startColor="@color/red" 为自定义开始颜色
//<corners android:radius="0.0dip" /> 为两头圆角的弧度，值越大越圆
//<gradient > 为设置渐变色背景 angle 为角度，必须是45的倍数
-->
