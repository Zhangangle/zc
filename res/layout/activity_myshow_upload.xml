<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <include layout="@layout/basic_top" />

    <LinearLayout style="@style/layout_full_wrap"
        android:background="@drawable/shape_graytext"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:paddingTop="8dip"
        android:paddingLeft="5dip"
        android:paddingBottom="8dip"
        android:id="@+id/layout_uplaodhint"
        android:orientation="horizontal">
        
        <ImageView android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/uploadpic_prompt"
            android:layout_gravity="center"/>
        
        <TextView style="@style/layout_full_wrap"
            android:id="@+id/tv_uploadpic_hint"
            android:text="@string/str_uploadpic_hint"
            android:textColor="@color/darkgray"
            android:layout_marginLeft="5dip"
            android:textSize="14dip"/>
    </LinearLayout>
    
   <EditText
        android:id="@+id/ed_myshow_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/shape_graytext"
        android:ems="10"
        android:gravity="left|top"
        android:hint="@string/str_hint_upload"
        android:maxLength="36"
        android:maxLines="3"
        android:minLines="3"
        android:padding="10dip"
        android:textColor="@color/darkgray"
        android:textSize="15dip" >

    </EditText>

    <Button
        android:id="@+id/btn_video"
        android:layout_width="fill_parent"
        android:layout_height="37.799988dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/btn_man_selector"
        android:text="@string/str_video_recorder"
        android:textColor="@color/white"
        android:textSize="16dip"
        android:visibility="gone" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/shape_graytext"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/layout_upload">
		
		<GridView
		    android:id="@+id/gv_photo"
		    style="@style/layout_full"
		    android:columnWidth="100dip"
		    android:horizontalSpacing="10dip"
		    android:verticalSpacing="10dip"
		    android:listSelector="@android:color/transparent"
		    android:numColumns="3"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="10dip"
		    android:scrollbars="none" />

        <!--<ImageView
            android:id="@+id/img_myshow_upload"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_marginTop="20dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/add_pic_icon_normal" />

        <TextView
            android:id="@+id/tv_myshow_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="请选择一张图片"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_myshow_upload"
            android:textColor="@color/darkgray"
            android:textSize="13dip" />-->
       
    </LinearLayout>

</LinearLayout>