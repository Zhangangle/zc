<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout style="@style/top_bg" >

        <!-- 返回 -->

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_height"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/img_back"
                style="@style/layout_wrap"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/btn_back" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_sign"
            style="@style/layout_wrap"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@drawable/qiandao"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_mine_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_mine_midfouce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="@string/str_personal_guanzhu"
                android:textColor="@color/black"
                android:textSize="18dip" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/darkgray" />

            <TextView
                android:id="@+id/tv_mine_midfans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:text="@string/str_my_fans"
                android:textColor="@color/darkgray"
                android:textSize="18dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_text"
            android:singleLine="true"
            android:text="" />
        <!-- 礼物 按钮 -->

        <LinearLayout
            android:id="@+id/layout_gift_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_gift_top"
                style="@style/layout_wrap"
                android:layout_gravity="center"
                android:background="@drawable/btn_gift_top_right_selector" />
        </LinearLayout>
        <!-- 升VIP 按钮 -->

        <LinearLayout
            android:id="@+id/layout_text_vip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_text_vip"
                style="@style/layout_wrap"
                android:layout_gravity="center"
                android:text="@string/str_top_sheng"
                android:textColor="@color/red" />
        </LinearLayout>
        <!-- 充值VIP 按钮 -->

        <LinearLayout
            android:id="@+id/layout_text_chong"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_text_chong"
                style="@style/layout_wrap"
                android:layout_gravity="center"
                android:text="@string/str_top_chong"
                android:textColor="@color/theme_color_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_text_leftchong"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_height"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_text_leftchong"
                style="@style/layout_wrap"
                android:layout_gravity="center"
                android:text="@string/str_top_chong"
                android:textColor="@color/theme_color_title" />
        </LinearLayout>
        <!-- 更多按钮 -->

        <LinearLayout
            android:id="@+id/layout_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_title_right_selector"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:visibility="gone" >

            <ImageView
                style="@style/layout_wrap"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/btn_more" />
        </LinearLayout>
        <!-- 是否为VIP会员 -->

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_title"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="@string/str_top_putong"
            android:textColor="#ff0000"
            android:visibility="gone" />
        <!-- 电话按钮 -->

        <Button
            android:id="@+id/btn_phone"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/btn_jiahei"
            android:background="@drawable/btn_phone_selector"
            android:visibility="gone" />
        <!-- 加黑举报 -->

        <Button
            android:id="@+id/btn_jiahei"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/btn_jiahei_selector"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/shape_blue"
            android:padding="8dip"
            android:text="@string/str_send"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>