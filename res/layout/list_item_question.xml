<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dip"
    	android:layout_marginTop="10dip"
        android:background="@drawable/shape_graytext"
        android:id="@+id/layout_question" >

       <RelativeLayout  style="@style/layout_full_wrap">
           <ImageView style="@style/layout_wrap"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dip"
               android:id="@+id/img_arrow"
               android:src="@drawable/faq_right_arrow"/>
            <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="10dip"
            android:layout_toRightOf="@+id/img_arrow"
            android:layout_centerVertical="true"
            android:textSize="15dip" />
       </RelativeLayout>
       
       
        <LinearLayout android:orientation="vertical"
        style="@style/layout_full_wrap"
        android:id="@+id/layout_answer"
      
        android:visibility="gone">
         <View android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray"/>
        <TextView   android:padding="10dip"
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="13dip"
            />
    </LinearLayout>
        
    </LinearLayout>
   
    
    

</LinearLayout>