<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/smssdk_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="16dip"
        android:paddingRight="16dip" >

        <LinearLayout
            android:id="@+id/rl_country"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/smssdk_country"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_login_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/smssdk_china"
                android:textColor="#ff45c01a"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/smssdk_gray_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp" >

            <TextView
                android:id="@+id/tv_country_num"
                android:layout_width="70dip"
                android:layout_height="match_parent"
                android:background="@drawable/smssdk_input_bg_focus"
                android:gravity="center"
                android:text="+86"
                android:textColor="#ff353535"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/smssdk_input_bg_special_focus"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/et_login_phone"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_phone_input_hint"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="#ff353535"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_login_clear"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/smssdk_clear_search"
                    android:scaleType="centerInside"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp" >

            <TextView
                android:layout_width="70dip"
                android:layout_height="match_parent"
                android:background="@drawable/smssdk_input_bg_focus"
                android:gravity="center"
                android:text="@string/smssdk_password"
                android:textColor="#ff353535"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/smssdk_input_bg_special_focus"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_login_password_hint"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="#ff353535"
                    android:textSize="15sp" >
                </EditText>

                <ImageView
                    android:id="@+id/iv_login_clear_pw"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/smssdk_clear_search"
                    android:scaleType="centerInside"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login_submit"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/smssdk_btn_enable"
            android:text="@string/str_login"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_login_newuser"
            style="@style/layout_wrap"
            android:layout_gravity="right"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:textColor="#ff45c01a"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>