<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:gravity="center"
            android:tag="Bottom" >

            <ImageView
                android:id="@+id/img_trash"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/trash_icon" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="10dip"
                android:text="@string/str_delete"
                android:textColor="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="95dip"
            android:background="@drawable/button_onebuy_select"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/img_onebuy_listicon"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_whitetext"
                android:scaleType="centerCrop"
                android:src="@drawable/default_female" />

            <TextView
                android:id="@+id/tv_onebuy_listname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_onebuy_listicon"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_onebuy_listicon"
                android:maxLines="2"
                android:paddingBottom="3dip"
                android:text="希捷(Seagate)Backup Plus睿品(升级版)1T 2.5英寸USB3.0移动硬盘"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_onebuy_listsurplusnums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_onebuy_listname"
                android:layout_below="@+id/tv_onebuy_listname"
                android:paddingBottom="8dip"
                android:singleLine="true"
                android:text="剩余123人次"
                android:textColor="@color/darkgray"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_onebuy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_onebuy_listsurplusnums"
                android:layout_below="@+id/tv_onebuy_listsurplusnums"
                android:singleLine="true"
                android:text="@string/str_onbuy_buycount"
                android:textColor="@color/darkgray"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_onebuy_listcounts"
                android:layout_width="60dip"
                android:layout_height="22dip"
                android:layout_alignBaseline="@+id/tv_onebuy_count"
                android:layout_alignBottom="@+id/tv_onebuy_count"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/tv_onebuy_count"
                android:background="@drawable/shape_whitetext"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/darkgray"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_onebuy_listprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_onebuy_listcounts"
                android:layout_alignBottom="@+id/tv_onebuy_listcounts"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/tv_onebuy_listcounts"
                android:singleLine="true"
                android:text="¥2.00"
                android:textColor="@color/darkorange"
                android:textSize="13dip" />
        </RelativeLayout>

        <!--
             <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90.5dip"
            android:background="@color/white"
            android:orientation="vertical" >

         
        </LinearLayout>
        -->
    </com.daimajia.swipe.SwipeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray" />

</LinearLayout>