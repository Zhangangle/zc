<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/layout_full_wrap"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/img_visit_avatar"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_female" />

        <TextView
            android:id="@+id/tv_visit_nick"
            style="@style/layout_wrap"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/img_visit_avatar"
            android:maxLength="20"
            android:text="1123213"
            android:textColor="@color/black" />

        <LinearLayout
            style="@style/layout_wrap"
            android:layout_alignLeft="@+id/tv_visit_nick"
            android:layout_below="@+id/tv_visit_nick"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/tv_visit_time"
            style="@style/layout_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textColor="@color/black" />

        <ImageView
            style="@style/layout_wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/tv_visit_time"
            android:src="@drawable/last_visitor" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray" />

</LinearLayout>