<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_super_vip"
        style="@style/layout_full_wrap"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <RelativeLayout
            style="@style/layout_wrap"
            android:background="@drawable/btn_purple_left" >

            <TextView
                android:id="@+id/tv_super_oldprice"
                style="@style/layout_wrap"
                android:layout_centerVertical="true"
                android:text="原价360元"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/layout_wrap"
            android:background="@drawable/btn_purple_right" >

            <TextView
                android:id="@+id/tv_super_newprice"
                style="@style/layout_full_wrap"
                android:layout_centerVertical="true"
                android:text="超级VIP套餐三 168元/6个月"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_super_bottom"
        style="@style/layout_full_wrap"
        android:gravity="center"
        android:padding="5dip"
        android:text="VIP套餐+送1200金币" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="5dip"
        android:background="@color/gray" />

</LinearLayout>