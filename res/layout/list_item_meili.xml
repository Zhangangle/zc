<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/shape_whitetext"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/img_meili_listicon"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/default_female" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tv_gift_listname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="iphone5S"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/str_meili_cankao"
                    android:textColor="@color/darkgray"
                    android:textSize="13dip" />

                <TextView
                    android:id="@+id/tv_meili_listcoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥5200"
                    android:textColor="@color/darkgray"
                    android:textSize="13dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_meili_dui"
                    android:textColor="@color/darkgray"
                    android:textSize="13dip" />

                <TextView
                    android:id="@+id/tv_meili_listprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="6000000魅力"
                    android:textColor="#ff0000"
                    android:textSize="13dip" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_meili_listexchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:clickable="false"
                android:focusable="false"
                android:padding="8dip"
                android:text="@string/str_meili_btn"
                android:textColor="@color/white"
                android:textSize="13dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>