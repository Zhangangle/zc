<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <ImageView
            android:id="@+id/img_onebuy_listicon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_female" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <TextView
            android:id="@+id/tv_onebuy_listaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_onebuy_listname"
            android:paddingTop="5dip"
            android:text="(福建省漳州市)"
            android:textColor="@color/darkgray"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_onebuy_listcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_onebuy_listname"
            android:layout_below="@+id/tv_onebuy_listname"
            android:paddingLeft="20dip"
            android:paddingTop="3dip"
            android:text="@string/str_onebuy_recordnum"
            android:textColor="@color/darkgray"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_onebuy_listtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_onebuy_listcount"
            android:layout_toRightOf="@+id/img_onebuy_listicon"
            android:paddingLeft="20dip"
            android:paddingTop="3dip"
            android:text="2015-02-11 12:30:32.265"
            android:textColor="@color/darkgray"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_onebuy_listname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_onebuy_listtime"
            android:layout_alignTop="@+id/img_onebuy_listicon"
            android:paddingLeft="20dip"
            android:paddingTop="5dip"
            android:text="日照大地"
            android:textColor="@color/lightblue"
            android:textSize="15dip" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray" />

</LinearLayout>