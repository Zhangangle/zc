<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/toplayout"
        layout="@layout/basic_top" />

    <ImageView
        android:id="@+id/img_exchange_icon"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:src="@drawable/default_female" />

    <TextView
        android:id="@+id/tv_exchange_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:text="iphone6 plus"
        android:textColor="@color/black"
        android:textSize="15dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_meili_cankao"
            android:textColor="@color/darkgray"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_exchange_cankao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥6288"
            android:textColor="@color/darkgray"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_meili_dui"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_exchange_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60000000魅力"
            android:textColor="#ff0000"
            android:textSize="15dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="@string/str_meili_num"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <EditText
            android:id="@+id/ed_exchange_nums"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/shape_text"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="2"
            android:padding="3dip"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="15dip" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_exchange_addnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_chattype_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_meili_sum"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_exchange_zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60000000魅力"
            android:textColor="@color/black"
            android:textSize="15dip" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="#ff0000"
        android:padding="10dip"
        android:text="@string/str_meili_sure"
        android:textColor="@color/white"
        android:textSize="15dip" />

</LinearLayout>