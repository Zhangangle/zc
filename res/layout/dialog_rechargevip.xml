<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_whitetext"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:gravity="left"
        android:padding="10dip"
        android:text="@string/str_vip_dialog_text"
        android:textColor="@color/black"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/tv_dialog_textmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dip"
        android:paddingTop="5dip"
        android:text="@string/str_talk_dialogtitle"
        android:textColor="@color/red"
        android:textSize="13dip"
        android:visibility="gone" />

    <View
        android:id="@+id/view_dialog_textline"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="5dip"
        android:background="@color/gray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llayout_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_dialog_ad"
            style="@style/layout_full"
            android:layout_marginTop="10dip"
            android:adjustViewBounds="true"
            android:padding="1dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_female"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_dialog_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dip"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_msg"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="5dip" >

        <Button
            android:id="@+id/btn_dialog_cancle"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="#14220000"
            android:padding="10dip"
            android:text="@string/str_cancel"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <Button
            android:id="@+id/btn_dialog_sure"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:padding="10dip"
            android:text="@string/str_sure"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </LinearLayout>

</LinearLayout>