<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/list_item_rp_avatar"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@drawable/default_female" />

        <TextView
            android:id="@+id/list_item_rp_content"
            style="@style/layout_wrap"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/list_item_rp_avatar"
            android:text="123123"
            android:textColor="@color/darkgray" />

        <TextView
            android:id="@+id/list_item_rp_nick"
            style="@style/layout_wrap"
            android:layout_below="@+id/list_item_rp_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/list_item_rp_avatar"
            android:text="123123"
            android:textColor="@color/darkgray" />

        <TextView
            android:id="@+id/list_item_rp_time"
            style="@style/layout_wrap"
            android:layout_alignTop="@+id/list_item_rp_nick"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/list_item_rp_nick"
            android:textColor="@color/darkgray" />

        <ImageView
            android:id="@+id/list_item_rp_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/reply_item_btn" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray" />

</LinearLayout>