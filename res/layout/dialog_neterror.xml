<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="133.79999dip"
    android:layout_gravity="center"
    android:layout_margin="20.5dip"
    android:background="@color/theme_color_neterror"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/layout_full_wrap"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/img_neterror_closed"
           	style="@style/layout_wrap"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="1.2999878dip"
            android:layout_marginTop="0.0dip"
            android:padding="8.5dip"
            android:src="@drawable/net_error_close" />
    </RelativeLayout>

    <LinearLayout
        style="@style/layout_full_wrap"
        android:layout_marginBottom="16.5dip"
        android:layout_marginLeft="26.5dip"
        android:layout_marginTop="16.5dip"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_neterror_warn"
            style="@style/layout_wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13.799988dip"
            android:src="@drawable/net_error_warning" />

        <TextView
            android:id="@+id/tv_neterror"
            style="@style/layout_wrap"
            android:text="@string/str_net_error"
            android:textColor="@color/white"
            android:textSize="12.5dip" />
    </LinearLayout>

    <RelativeLayout
       	style="@style/layout_full_wrap"
        android:layout_marginBottom="8.0dip"
        android:background="@color/black" >

        <Button
            android:id="@+id/btn_neterror_set"
            android:layout_width="105.79999dip"
            android:layout_height="29.799988dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginRight="35.0dip"
            android:background="@drawable/btn_opennet_selector"
            android:text="@string/str_open_net"
            android:textColor="@color/white"
            android:textSize="13.799988dip" />
    </RelativeLayout>

</LinearLayout>
