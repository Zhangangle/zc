<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_find_select"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/img_mygift_listicon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_female" />

        <LinearLayout
            android:layout_width="120dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <TextView
                android:id="@+id/tv_mygift_listname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="擦肩而过"
                android:textColor="@color/lightblue"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/tv_mygift_listmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="赠送了一个钻石"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_mygift_listcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="金币:30"
                android:textColor="@color/red"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/tv_mygift_listanswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="对方未回复"
                android:textColor="@color/darkgray"
                android:textSize="12dip"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_mygift_listpic"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_mygift_listoperate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:background="@drawable/shape_blue"
                android:clickable="false"
                android:focusable="false"
                android:padding="10dip"
                android:text="@string/str_mygift_operate"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray" />

</LinearLayout>