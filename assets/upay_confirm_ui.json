{
	"window-no-title": true,
	"window-full-screen": true,
	"content-view": {
    	"type": "relative-layout",
		"width": "fill",
		"height": "fill",
		"children": [
		    {
		    	"type": "relative-layout",
		        "id": "container",
		        "width": "wrap",
		        "height": "wrap",
		        "background": "#ffffff",
		        "align": "hcenter vcenter",
		        "margin": "auto 20dp auto 20dp",
		        "children": [
				    {
				        "type": "image",
				        "id": "background",
				        "width": "fill",
				        "height": "40dp",
				        "background": "upay_top_",
				        "align": "auto auto",
				        "margin": "auto auto auto auto",
				        "image-scaleType": "fit-xy"
				    },
				    {
				        "type": "button",
				        "id": "okButton",
				        "width": "fill",
				        "height": "wrap",
				        "align": "below label6",
				        "margin": "5dp 20dp auto 20dp",
				        "text": "确认支付",
				        "result-code": "ok",
				        "background": "upay_pay_ok",
				        "text-color": "#ffffff",
				        "text-size": "20px"
				    },
				    {
				        "type": "button",
				        "id": "cancelButton",
				        "width": "35dp",
				        "height": "25dp",
				        "align": "right auto",
				        "margin": "8dp 10dp auto auto",
				        "text": "",
				        "result-code": "canceled",
				        "background": "upay_backout",
				        "text-color": "",
				        "text-size": ""
				    },
				    {
				        "id": "img",
				        "type": "image",
				        "width": "fill",
				        "height": "40dp",
				        "align": "below okButton",
				        "margin": "5dp 20dp auto 20dp",
				        "background": "upay_bottom_bg_all",
				        "image-scaleType": "",
				        "image-src": "",
				        "visibility": "visible"
				    },
				    {
				        "id": "label",
				        "type": "text",
				        "width": "fill",
				        "height": "wrap",
				        "align": "below background",
				        "margin": "auto auto auto auto",
				        "padding": "5dp auto 5dp 20dp",
				        "text": "话费支付",
				        "background": "upay_md_bg",
				        "text-color": "#089afc",
				        "text-size": "20px",
				        "visibility": "visible"
				    },
				    {
				        "id": "img2",
				        "type": "image",
				        "width": "fill",
				        "height": "80dp",
				        "align": "below label",
				        "margin": "5dp 20dp auto 20dp",
				        "background": "upay_top_bg_all",
				        "image-scaleType": "",
				        "image-src": "",
				        "visibility": "visible"
				    },
				    {
				        "id": "img1",
				        "type": "image",
				        "width": "25dp",
				        "height": "25dp",
				        "align": "below label",
				        "margin": "15dp auto auto 30dp",
				        "background": "",
				        "image-scaleType": "",
				        "image-src": "upay_amount",
				        "visibility": "visible"
				    },
				    {
				        "id": "label1",
				        "type": "text",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "right-of img1 below label",
				        "margin": "15dp auto auto 2dp",
				        "padding": "auto auto auto auto",
				        "text": "消费金额：",
				        "background": "",
				        "text-color": "#797979",
				        "text-size": "16px",
				        "visibility": "visible"
				    },
				    {
				        "id": "label2",
				        "type": "text",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "right-of label1 below label",
				        "margin": "15dp auto auto 2dp",
				        "padding": "auto auto auto auto",
				        "text": "$goods_price元",
				        "gravity": "end",
				        "background": "",
				        "text-color": "#f1b838",
				        "text-size": "16px",
				        "visibility": "visible"
				    },
				    {
				        "id": "img3",
				        "type": "image",
				        "width": "25dp",
				        "height": "25dp",
				        "align": "below label1",
				        "margin": "15dp auto auto 30dp",
				        "background": "",
				        "image-scaleType": "",
				        "image-src": "upay_commodity",
				        "visibility": "visible"
				    },
				    {
				        "id": "label3",
				        "type": "text",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "right-of img3 below label1",
				        "margin": "17dp auto auto 2dp",
				        "padding": "auto auto auto auto",
				        "text": "商品名称：",
				        "background": "",
				        "text-color": "#797979",
				        "text-size": "16px",
				        "visibility": "visible"
				    },
				    {
				        "id": "label4",
				        "type": "text",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "right-of label3 below label1",
				        "margin": "17dp 25dp auto 2dp",
				        "padding": "auto auto auto auto",
				        "text": "$goods_name",
				        "background": "",
				        "text-color": "#797979",
				        "text-size": "16px",
				        "visibility": "visible",
				        "single-line": true
				    },
				    {
				        "id": "label5",
				        "type": "text",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "below img2",
				        "margin": "5dp auto auto 20dp",
				        "padding": "auto auto auto auto",
				        "text": "确认支付，即可购买！",
				        "text-color": "#c8c8c8",
				        "text-size": "16px",
				        "visibility": "visible"
				    },
				    {
				        "id": "img4",
				        "type": "image",
				        "width": "20dp",
				        "height": "20dp",
				        "align": "right-of label5 below img2",
				        "margin": "5dp auto auto 5dp",
				        "background": "",
				        "image-scaleType": "",
				        "image-src": "upay_sure",
				        "visibility": "visible"
				    },
				    {
				        "id": "label6",
				        "type": "text",
				        "width": "fill",
				        "height": "wrap",
				        "align": "below label5",
				        "margin": "5dp 20dp auto 20dp",
				        "padding": "3dp 3dp 3dp 5dp",
				        "text": "注意：由于运营商相关规定，用户在支付前要确保话费余额充足，且单位时间内操作不宜频繁，若使用话费支付失败，建议关闭其他拦截软件。",
				        "background": "#fffbeb",
				        "text-color": "#797979",
				        "text-size": "12px",
				        "visibility": "visible"
				    },
				    {
				        "id": "img5",
				        "type": "image",
				        "width": "50dp",
				        "height": "30dp",
				        "align": "hcenter auto",
				        "margin": "5dp auto auto auto",
				        "background": "upay_logo",
				        "image-scaleType": "matrix",
				        "image-src": "",
				        "visibility": "visible"
				    },
				    {
				        "id": "img6",
				        "type": "image",
				        "width": "20dp",
				        "height": "20dp",
				        "align": "below okButton",
				        "margin": "15dp auto auto 30dp",
				        "background": "",
				        "image-scaleType": "",
				        "image-src": "upay_description",
				        "visibility": "visible"
				    },
				    {
				        "id": "label7",
				        "type": "text",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "right-of img6 below okButton",
				        "margin": "15dp auto auto 2dp",
				        "padding": "auto auto auto auto",
				        "text": "商品描述：",
				        "background": "",
				        "text-color": "#797979",
				        "text-size": "16px",
				        "visibility": "visible"
				    },
				    {
				        "id": "label8",
				        "type": "text",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "right-of label7 below okButton",
				        "margin": "15dp 25dp auto 2dp",
				        "padding": "auto auto auto auto",
				        "text": "$goods_label",
				        "background": "",
				        "text-color": "#797979",
				        "text-size": "16px",
				        "visibility": "visible",
				        "single-line": true,
				        "ellipsize":"marquee",
				        "marqueerepeatlimit":"-1",
				        "focusable":true,
				        "focusableintouchmode":true,
				        "scrollhorizontally":true
				    },
				    {
				        "id": "img7",
				        "type": "image",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "below img",
				        "margin": "10dp 20dp auto 20dp",
				        "background": "",
				        "image-scaleType": "",
				        "image-src": "upay_secretary",
				        "visibility": "visible"
				    },
				    {
				        "id": "img8",
				        "type": "image",
				        "width": "wrap",
				        "height": "wrap",
				        "align": "hcenter auto below img7",
				        "margin": "auto auto auto auto",
				        "background": "",
				        "image-scaleType": "",
				        "image-src": "upay_logo_bottom",
				        "visibility": "visible"
				    }
		        ]
		    }
		]
	}
}